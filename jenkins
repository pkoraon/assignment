pipeline {
    agent any

    tools {
        maven "maven"
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        stage("Run") {
            steps {
                sh "mvn spring-boot:run"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}